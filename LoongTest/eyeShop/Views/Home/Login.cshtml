@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/Content/js/bootstrap.min.js"></script>
    <script src="/Content/js/jquery-1.8.3.js"></script>
</head>
<body>

    <div class="jumbotron">
        <div class="container">

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="firstname" class="col-sm-2 control-label">登录名</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" style="width:500px" name="username" placeholder="请输入登录名">
                    </div>
                </div>
                <div class="form-group">
                    <label for="lastname" class="col-sm-2 control-label">密&nbsp;&nbsp;&nbsp;码</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" style="width:500px" name="password" placeholder="请输入登录密码">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">请记住我
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-info">登录</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
