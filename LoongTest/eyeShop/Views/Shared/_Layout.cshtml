<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery-1.8.3.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Content/js/details.js"></script>
</head>
<body>



    <div class="container">
        <div class="header">
            <img src="~/Content/images/logo.jpg" alt="Alternate Text" width="180" height="70" /><br />
            <a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo.jpg" alt="Alternate Text" width="180" height="70" /></a>
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" style="color:white" href="javascript:void(0)">玲珑眼镜</a>
                    </div>
                    <div>
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="@Url.Action("Index","Home")">首页</a></li>
                            <li class="active"><a href="#">订单管理</a></li>
                            @{
                                if (Session["username"] != null)
                                {
                                    <li><a href="javascript:void(0)">@Session["username"],欢迎你</a></li>
                                    <li><a href="@Url.Action("LogOut")">_注销</a></li>
                                    <li><a href="#">我的购物车</a></li>
                                }
                                else
                                {
                                    <li class="active"><a href="@Url.Action("Login","Home")">登录</a></li>
                                    <li class="active"><a href="javascript:void(0)">注册</a></li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="serch">
                        <form class="form-inline" action="@Url.Action("Index")">
                            <input type="text" class="form-control" name="serch" placeholder="请输入搜索内容" style="width:300px">
                            <input type="submit" class="btn btn-default" value="搜索">
                        </form>
                    </div>
                </div>
            </nav>


        </div>
        @RenderBody()
    </div>

</body>
</html>
